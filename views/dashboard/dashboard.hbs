<div class="main-container d-flex justify-content-center">
  <div class="d-flex flex-column ml-3">
    <div class="p-2">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link active" style="color: #444444" href="/onboarding">Onboarding</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" style="color: #444444" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
    <div class="d-flex flex-column ml-3">
      <div class="p-2 flags-row justify-content-center">
        {{#each flags}}
        <form action="/dashboard" method="POST">
          <input type="hidden" name="flag" id="flags" value="{{this.init}}">
          <div>
            <button class="btn btn-outline" type="submit">
              <img class="flags-little" src={{this.image}} alt={{this.init}}>
            </button>
        </form>
      </div>
      {{/each}}
    </div>
  </div>
  <br>
  {{!-- ------------------------------------- --}}

  {{!-- ------------------------------------- --}}

  <div class="p-2 flex-column align-content-center" style="background-color:black">
    <br>
    <div class="p-2 d-flex flex-column">
      <h1 class="text-center" style="color: white">We know you love <span
          style="text-decoration: line-through">Owls</span> news</h1>
    </div>
    <div class="row justify-content-center">
      <h4 class=" text-center" style="color: white">Search for a topic or get filtered!</h2>
    </div>
    <br>
    <div class="p-2 d-flex flex-column">
      <div class="d-flex flex-column">
        <div>
          <div class="d-flex justify-content-center">
            <form action="/dashboard" method="POST" class="searchbar">
              <div class="input-group">
                <input class="form-control" id="myInput" type="text" name="keyword" placeholder="Search">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary" type="submit" style="color: white">Search</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <br>
        <div class="d-flex justify-content-center">
          <form action="/dashboard" method="POST" class="searchbar">
            {{#with user}}
            <input id="myInput" type="hidden" name="keyword" value={{keyword}}>
            {{/with}}
            <button class="btn btn-dark glow-on-hover m-0" style="border-color: white" type="submit">Let´s go
              filtered</button>
          </form>

        </div>
      </div>
      ​
    </div>
  </div>

  ​<div class="article-box d-flex flex-column text-align-center">
    <div class="p-2 d-flex flex-wrap justify-content-center">
      {{#each articlesList}}
      <div class=" box flex-column flex bd-highlight" style="max-width: 20vw;">
        <p style="text-align: center;">{{this.source.name}}</p>
        <a href="{{this.url}}">
          <img class="article-images" src="{{this.urlToImage}}" alt="{{this.title}}">
          <h2 style="text-align: center" class=" h2-dashboard">{{this.title}}</h2>
          {{!-- <h3 style="font-size: 10px;">{{this.author}}</h3> --}}
        </a>
      </div>
      {{/each}}

    </div>
  </div>
</div>